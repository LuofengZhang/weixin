/* pages/my/my.wxss */
page{
  background-color:#f6f6f6;
  height:100%;
  font-family:"微软雅黑";
}
.user-box{
  background:url(http://zhchina.top:9000/images/1522201928608.png) ;
  background-size:100% 280px; 
  height: 280rpx;
}

.user-left{
  width: 30%;
  height:100%;
  float: left;
}
.user-right{
  box-sizing: border-box;
  height: 100%;
  width: 70%;
  float: right;
  padding:90rpx 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin: 76rpx;
}

.userinfo-nickname {
   color: white; 
   font-weight: bold; 
  display: block;
}
.userinfo-city{
  color: white;
  margin-top: 30rpx;
  font-size: 30rpx;
}
.list{
   margin-bottom:25rpx;  
}
.list-item{
  margin-bottom: 1rpx; 
  background-color:white;
  font-size: 1rem;
  line-height: 3rem;
  height: 3rem;
  padding-left: 5%;
}
.icon{
  height: 2rem;
  width: 2rem;
  vertical-align: middle;
  margin-right:0.6rem; 
}
.icon2{
  height: 1rem;
  width: 1rem;
  vertical-align: middle;
  margin-right:0.6rem; 
  float: right;
  margin-top: 1rem;
}
.jifen{
  float: right;
   margin-right:1rem; 
}

